<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Details</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Contact not found,
        <a href="/contact" class="alert-link">back to Contact List</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.email %>
          </h6>
          <p class="card-text"><%= contact.phoneNumber %></p>
          <a href="/contact" class="card-link">&laquo; Back to Contacts List</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
